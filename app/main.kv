<PedidoApp>:
    orientation: 'vertical'
    Label:
        text: 'Pizza do Papa'
        font_size: 20
        size_hint_y: 0.50
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 0.20
        Label:
            text: 'Cliente: '
        TextInput:
            id: nome_usuario
            hint_text: 'Digite seu nome: '
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 0.50
        Label:
            text: 'Produtos'
        Label:
            text: 'Quantidades'
    GridLayout:
        cols: 3
        size_hint_y: 1.50
        CheckBox:
            id: q_queijo
        Label:
            text:'Quatro queijos'
        TextInput:
            id: q1
            text:''

        CheckBox:
            id: Mus
        Label:
            text:'Mussarela'
        TextInput:
            id: q2
            text:''

        CheckBox:
            id: clabrsa
        Label:
            text:'Calabresa'
        TextInput:
            id: q3
            text:''

        CheckBox:
            id: portu
        Label:
            text:'Portuguesa'
        TextInput:
            id: q4
            text:''
        CheckBox:
            id: cat
        Label:
            text:'Frango c/ Catupiy'
        TextInput:
            id: q5
            text:''
        CheckBox:
            id: cro
        Label:
            text:'Crocante'
        TextInput:
            id: q6
            text:''

    Label:
        id: mensagem
        text:''
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: 0.15
        Spinner:
            id: sp1
            size_hint_y: None
            height: 40
            text: 'Escolha o tipo de pagamento'
            values: ('À vista (espécie)', 'À vista (pix)', 'À vista (cartão de crédito)', 'Parcelado 2x no cartão de crédito')
            on_text: root.tipo_pagamento(self.text)
        Spinner:
            id: tmnho
            size_hint_y: None
            height: 40
            text: 'Esolha o tamanho'
            values: 'Pequena', 'Média', 'Grande', 'Gigante'

        
            
        Button:
            text: 'Calcular Total'
            size_hint_y: None
            height: 40
            on_release: root.calcular_total()
        
        Button:
            text: 'Limpar Tudo'
            size_hint_y: None
            height: 40
            on_release: root.limpar_campos()
        
        Button:
            text: 'Sair'
            size_hint_y: None
            height: 40
            on_press: app.stop()
